{
  "manifest_version": 2,
  "name": "ThuLogin",  
  "version": "0.1.0",  
  "description": "Login Tsinghua websites.",
  "options_page": "options.html",
  "browser_action": {  
    "default_icon": "icon32.png" ,
    "default_title": "ThuLogin",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://*.tsinghua.edu.cn/",
    "http://*.tsinghua.edu.cn/"
  ]
} 